{% extends 'header.html.twig' %}
{% block title %}Soap: Messages{% endblock %}
{% block content %}
    {% include 'background.html.twig' %}
    {% include 'navbar.html.twig' %}
    <div class="page-container">
        <h2 class="slide" id="welcome-header">Welcome!</h2>

        <div id="table-container">
            <table style="width:100%">
                <thead>
                <tr>
                    <th class="sticky-col first-col">Recipient</th>
                    <th class="sticky-col second-col">Receiver</th>
                    <th class="sticky-col third-col">Delivery Time</th>
                    <th class="sticky-col fourth-col">Switch</th>
                    <th class="sticky-col fifth-col">Fan</th>
                    <th class="sticky-col sixth-col">Heater</th>
                    <th class="sticky-col seventh-col">Keypad</th>
                </tr>
                </thead>
                <tbody>
                {% for row in downloadsresults %}
                    <tr>
                        <td>{{ row.sourcemsisdn }}</td>
                        <td>{{ row.destinationmsisdn }}</td>
                        <td>{{ row.recievedtime }}</td>
                        <td>{{ row.switch }}</td>
                        <td>{{ row.fan }}</td>
                        <td>{{ row.heater }}</td>
                        <td>{{ row.keypad }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <script>
        $("#welcome-header").click(function(){ <!-- use to hide elemement-->
            $("#welcome-header").fadeOut(1000);
        });
    </script>
{% endblock %}
